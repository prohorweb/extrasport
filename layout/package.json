{
  "title": "FrontEnd",
  "name": "start-template",
  "scripts": {
    "css-build": "node-sass src/_scss/ -o public/assets/css/",
    "css-watch": "node-sass src/_scss/ -o public/assets/css/ --watch",
    "css-postcss": "postcss  public/assets/css/styles.css --use autoprefixer -o public/assets/css/styles.css  --no-map ",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "files-build": "cp -a ./src/_assets/* ./public/assets",
    "files-watch": "npm run files-build --watch",
    "pug-build": "pug -o public/ src/_pug/pages/",
    "pug-watch": "pug -o public/ src/_pug/pages/ --watch",
    "js-build": "cp ./src/_js/* ./public/assets/js ",
    "js-watch": "npm run js-build --watch ",
    "js-deploy": "babel src/_js --out-dir public/assets/js",
    "gh-deploy": "gh-pages --dist public --branch deploy",
    "browser-sync-watch": "browser-sync start --server public --files public",
    "clean": "rimraf public",
    "build": "npm-run-all --parallel css-build js-build pug-build files-build",
    "server": "npm-run-all --parallel css-watch pug-watch files-watch browser-sync-watch",
    "deploy": "npm-run-all --parallel css-deploy js-deploy pug-build files-build gh-deploy"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "autoprefixer": "^10.4.13", 
    "gh-pages": "^4.0.0",
    "node-sass": "^9 .0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "bootstrap": "^5.2.2"
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  }
}
